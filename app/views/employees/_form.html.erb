<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for employee_path(@employee) do |f| %>
        <div class="form-group">
          <%= "Hola" %>
        </div>
        <div class="form-group">
          <%= f.input :avatar, as: :file, label: "Subir Avatar", input_html: { class: "form-control" } %>
        </div>
        <div class="form-group mt-3">
          <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
