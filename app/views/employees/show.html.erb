<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
  <h1 class="mb-4">Detalles del Empleado</h1>

  <% if @employee.avatar.attached? %>
    <div class="text-center mb-3">
      <%= image_tag @employee.avatar, alt: "Foto de #{@employee.name}", width: 180, class: "rounded-circle shadow border p-1" %>
    </div>
  <% end %>

  <table class="table table-hover w-50 text-center shadow-sm">
    <tr>
      <th>Nombre</th>
      <td><%= @employee.name %></td>
    </tr>
    <tr>
      <th>Fecha de Nacimiento</th>
      <td><%= @employee.birth_date %></td>
    </tr>
    <tr>
      <th>ID</th>
      <td><%= @employee.id_number %></td>
    </tr>
    <tr>
      <th>Rol</th>
      <td><%= @employee.role.name if @employee.role %></td>
    </tr>
    <tr>
      <th>Departamento</th>
      <td><%= @employee.department.name if @employee.department %></td>
    </tr>
    <tr>
      <th>Empresa</th>
      <td><%= @employee.company.name if @employee.company %></td>
    </tr>
  </table>

  <div class="mt-3">
    <%= link_to "Editar", edit_employee_path(@employee), class: "btn btn-outline-primary mx-1" %>
    <%= link_to "Eliminar", employee_path(@employee),
        data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro que deseas eliminar este empleado?" },
        class: "btn btn-outline-danger mx-1" %>
    <%= link_to "Volver", company_employees_path(@employee.company), class: "btn btn-outline-secondary mx-1" %>
  </div>
</div>
